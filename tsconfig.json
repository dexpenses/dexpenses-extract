{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "es2018",
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "types": ["node", "jest"]
  },
  "compileOnSave": true,
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
